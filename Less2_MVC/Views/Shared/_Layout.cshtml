<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ООО Фитнес Клуб</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mob.css" asp-append-version="true" />
   
</head>
<body>
    <header>
        <section class="top">
            <div class="container">
                <div class="top__logo-menu">
                    <div class="top__logo">
                        <img src="images/logo.png" alt="">
                    </div>
                    <div class="top__menu">
                        <ul>
                            <li><a href="#">Главная</a></li>
                            <li><a asp-controller="Trainers" asp-action="Index">Тренеры</a></li>
                            <li><a href="#">Тренеры</a></li>
                            <li><a href="#">Цены</a></li>
                            <li><a href="#">Контакты</a></li>
                            <li class="top__btn"><a href="#">Вход</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <main>
        <section class="slider">
            <div class="container">
                <div class="slider__offer">
                    <h1>Приглашаем вас <br> на тренировки</h1>
                    <div class="slider__btn">
                        <a href="#">Узнать подробнее</a>
                    </div>
                </div>
            </div>
        </section>

    
      
            @RenderBody()
        
   

    </main>
    <footer>
        <div class="container">
            <div class="footer__top">
                <div class="footer__media">
                    <img src="images/logo.png" alt="">
                    <p>
                        Lorem ipsum dolor amet, consectetur adipiscing elit. Eget nisl nunc quam ac sed turpis volutpat. Cursus sed massa non nisi, placerat.
                    </p>
                </div>
                <div class="footer__menu">
                    <div class="footer__column">
                        <h2>Quick Links</h2>
                        <ul>
                            <li><a href="#">Classes</a></li>
                            <li><a href="#">Timetable</a></li>
                            <li><a href="#">Clubs</a></li>
                            <li><a href="#">Nutrition</a></li>
                            <li><a href="#">Free Trial</a></li>
                        </ul>
                    </div>
                    <div class="footer__column">
                        <h2>Guides</h2>
                        <ul>
                            <li><a href="#">Weight Loss</a></li>
                            <li><a href="#">Strength Gain</a></li>
                            <li><a href="#">Crossfit</a></li>
                            <li><a href="#">Washbaord Abs</a></li>
                            <li><a href="#">Dieting</a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer__contacts">
                    <div class="footer__items">
                        <h2>Контакты</h2>
                        <div class="footer__item">
                            <div class="footer__item-foto">
                                <img src="images/Message.png" alt="">
                            </div>
                            <div class="footer__item-info">
                                <p>admin@goodlyfe.com</p>
                            </div>
                        </div>
                        <div class="footer__item">
                            <div class="footer__item-foto">
                                <img src="images/Mobile.png" alt="">
                            </div>
                            <div class="footer__item-info">
                                <p>+79898025554</p>
                            </div>
                        </div>
                        <div class="footer__item">
                            <div class="footer__item-foto">
                                <img src="images/Location.png" alt="">
                            </div>
                            <div class="footer__item-info">
                                <p>
                                    90210 Beverly Hills
                                    California USA
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="footer__bottom">
                <p>© 2020 GoodLyfe. All rights reserved</p>
                <ul>
                    <li><a href="#">Terms & Conditions |</a></li>
                    <li><a href="#">Privacy Policy |</a></li>
                    <li><a href="#">Sitemap |</a></li>
                    <li><a href="#">Disclaimer</a></li>
                </ul>
            </div>
        </div>
    </footer>
